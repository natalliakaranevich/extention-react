{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "My test credentials extension",
  "description": "no description for now",
  "omnibox": { "keyword" : "password" },
  "icons": {
    "16": "src/img/logo.png"
  },
  "permissions": [
    "activeTab",
    "background"
  ],
  "browser_action": {
    "default_title": "PasswordsSave",
    "default_icon": "src/img/logo.png",
    "default_popup": "public/index.html"
  },
  "background": {
    "scripts": ["dist/js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*"],
      "js": ["dist/js/vendor/jquery-3.2.1.min.js", "dist/js/content_sripts/formSubmited.js"],
      "run_at": "document_end"
    }
  ]
}